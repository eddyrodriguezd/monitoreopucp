<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncidenciasListActivity"
    android:background="@drawable/background2">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewIncidenciasList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/boton_rounded_border2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNear" />

    <ImageView
        android:id="@+id/imageViewNear"
        android:layout_width="121dp"
        android:layout_height="110dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/near"
        android:contentDescription="near" />

    <TextView
        android:id="@+id/textViewInfo1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/IncidenciasCercanasInfo1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/imageViewNear"
        app:layout_constraintTop_toTopOf="@+id/imageViewNear" />

    <TextView
        android:id="@+id/textViewInfo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/IncidenciasCercanasInfo2"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewNear"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewIncidenciasList"
        app:layout_constraintStart_toEndOf="@+id/imageViewNear"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfo1" />
</androidx.constraintlayout.widget.ConstraintLayout>