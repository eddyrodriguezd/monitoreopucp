<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewSingleUserIncidenciaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSingleUserIncidencia_TitleValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/Incidencia_TitleValue"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSingleUserIncidenciaTitle"
        app:layout_constraintStart_toEndOf="@+id/textViewSingleUserIncidenciaTitle"
        app:layout_constraintTop_toTopOf="@+id/textViewSingleUserIncidenciaTitle" />

    <TextView
        android:id="@+id/textViewSingleUserIncidencia_RegisterDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/Incidencia_DateValue"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSingleUserIncidenciaRegisterDate"
        app:layout_constraintStart_toEndOf="@+id/textViewSingleUserIncidenciaRegisterDate"
        app:layout_constraintTop_toTopOf="@+id/textViewSingleUserIncidenciaRegisterDate" />

    <TextView
        android:id="@+id/textViewSingleUserIncidencia_StatusValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/Incidencia_StatusValue"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSingleUserIncidenciaStatus"
        app:layout_constraintStart_toEndOf="@+id/textViewSingleUserIncidenciaStatus"
        app:layout_constraintTop_toTopOf="@+id/textViewSingleUserIncidenciaStatus" />

    <TextView
        android:id="@+id/textViewSingleUserIncidenciaRegisterDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/RegisterDate"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewSingleUserIncidenciaTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewSingleUserIncidenciaTitle" />

    <TextView
        android:id="@+id/textViewSingleUserIncidenciaStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/Status"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewSingleUserIncidenciaRegisterDate"
        app:layout_constraintTop_toBottomOf="@+id/textViewSingleUserIncidenciaRegisterDate" />

    <ImageView
        android:id="@+id/imageViewUserIncidencia"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSingleUserIncidencia_StatusValue"
        app:srcCompat="@drawable/ic_launcher_background" />

</androidx.constraintlayout.widget.ConstraintLayout>